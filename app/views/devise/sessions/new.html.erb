<div class="auth">
  <div class="auth__bg" aria-hidden="true"></div>

  <main class="auth__wrap">
    <section class="authCard" aria-label="ログイン">
      <header class="authCard__head">
        <h1 class="authCard__title">ログイン</h1>
      </header>

      <% if alert.present? %>
        <div class="alert alert--error"><%= alert %></div>
      <% end %>

      <%= form_with(scope: resource_name,
                    url: session_path(resource_name),
                    data: { turbo: false },
                    local: true,
                    class: "form") do |f| %>

        <div class="form__row">
          <%= f.label :email, "メールアドレス", class: "label" %>
          <%= f.email_field :email, class: "input", autocomplete: "email" %>
        </div>

        <div class="form__row">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
        </div>

        <%= f.submit "ログイン", class: "btn btn--primary" %>
      <% end %>
    </section>

    <p class="auth__foot"></p>
  </main>
</div>
